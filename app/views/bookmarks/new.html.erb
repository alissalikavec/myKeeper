<h1>Create a  Bookmark</h1>
	<div class="row">
	<div class="col-md-4">
		<p>Enter a link and a tag to categorize it.</p>
	</div>
	<div class="col-md-8">
		<%= form_for :bookmark, url: bookmarks_path do |f| %>
		<div class="form-group">
			<%= f.label :tag_list, "Tags, separated by commas:" %><br/>
			<%= f.text_field :tag_list, class: 'form-control', placeholder: 'e.g., #Unicorns' %>
		</div>
		<div class="form-group">
			<%= f.label :title, "Link URL" %><br/>
			<%= f.text_field :title , class: 'form-control', placeholder: 'Enter link URL' %>
		</div>

		<div class="form-group">
			<%= f.submit %>
		</div>
		<% end %>
	</div>
</div>